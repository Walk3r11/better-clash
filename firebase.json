{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/login",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "/login", "destination": "/index.html" },
      { "source": "/game", "destination": "/game.html" },
      { "source": "/deck", "destination": "/deck.html" },
      { "source": "/shop", "destination": "/shop.html" },
      { "source": "/1v1", "destination": "/1v1.html" },
      { "source": "/2v2", "destination": "/2v2.html" },
      { "source": "/inventory", "destination": "/inventory.html" },
      { "source": "/clan", "destination": "/clan.html" },
      { "source": "/friends", "destination": "/friends.html" },
      { "source": "/1v1-matchmaking", "destination": "/1v1matchmaking.html" },
      { "source": "/2v2-matchmaking", "destination": "/2v2matchmaking.html" },
      { "source": "/solo-match", "destination": "/game/1v1match.html" },
      { "source": "/duo-match", "destination": "/game/2v2match.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}