{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/login",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "/login", "destination": "/login.html" },
      { "source": "/game", "destination": "/game.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
