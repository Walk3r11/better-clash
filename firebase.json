{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/login",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "/login", "destination": "/index.html" },
      { "source": "/game", "destination": "/game.html" },
      { "source": "/deck", "destination": "/deck.html" },
      { "source": "/shop", "destination": "/shop.html" },
      { "source": "/1v1", "destination": "/1v1.html" },
      { "source": "/2v2", "destination": "/2v2.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}